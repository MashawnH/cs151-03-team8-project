<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BarChartController">
   <children>
      <HBox prefHeight="60.0" prefWidth="746.0">
         <children>
            <MenuButton mnemonicParsing="false" text="Type">
               <items>
                  <MenuItem mnemonicParsing="false" text="Expense" />
                  <MenuItem mnemonicParsing="false" text="Income" />
                  <MenuItem mnemonicParsing="false" text="Net Income" />
               </items>
               <HBox.margin>
                  <Insets left="30.0" top="24.0" />
               </HBox.margin>
            </MenuButton>
            <MenuButton mnemonicParsing="false" text="Period">
               <items>
                  <MenuItem mnemonicParsing="false" text="Daily" />
                  <MenuItem mnemonicParsing="false" text="Weekly" />
                  <MenuItem mnemonicParsing="false" text="Monthly" />
               </items>
               <HBox.margin>
                  <Insets left="20.0" top="24.0" />
               </HBox.margin>
            </MenuButton>
         </children>
      </HBox>
      <BarChart fx:id="barChart" prefHeight="284.0" prefWidth="600.0">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </BarChart>
      <Button fx:id="goBack" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#goBack" text="Cancel">
         <VBox.margin>
            <Insets left="250.0" />
         </VBox.margin></Button>
   </children>
</VBox>
