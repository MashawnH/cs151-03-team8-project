<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddController">
   <children>
   <HBox prefHeight="20.0" prefWidth="400.0">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <children>
         	<Label prefHeight="42.0" prefWidth="200.0" text="Invalid Input" style="-fx-text-fill: #8B0000;">
         		<font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="78.0" prefWidth="400.0">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <children>
            <Label prefHeight="42.0" prefWidth="86.0" text="Date: ">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Label>
            <DatePicker prefHeight="42.0" prefWidth="155.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></DatePicker>
         </children>
      </HBox>
      <HBox prefHeight="78.0" prefWidth="400.0">
         <children>
            <Label prefHeight="42.0" prefWidth="86.0" text="Type: ">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <CheckBox fx:id="expenseCheckBox" mnemonicParsing="false" onAction="#uncheckIncome" prefHeight="42.0" prefWidth="129.0" text="Expense">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="incomeCheckBox" mnemonicParsing="false" onAction="#uncheckExpense" prefHeight="42.0" prefWidth="131.0" text="Income">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
         </children>
      </HBox>
      <HBox prefHeight="78.0" prefWidth="400.0">
         <children>
            <Label prefHeight="42.0" prefWidth="86.0" text="Category:">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox prefHeight="42.0" prefWidth="140.0">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <HBox prefHeight="78.0" prefWidth="400.0">
         <children>
            <Label prefHeight="42.0" prefWidth="86.0" text="Amount: ">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="amountInput" prefHeight="42.0" prefWidth="183.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
         	<Button fx:id="cancelAdder" mnemonicParsing="false" onAction="#cancelButtonAction" prefHeight="48.0" prefWidth="86.0" text="Cancel">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
<Button fx:id="saveAdder" mnemonicParsing="false" onAction="#saveButtonAction" prefHeight="48.0" prefWidth="86.0" text="Save">               <HBox.margin>
                  <Insets left="130.0" />
               </HBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
